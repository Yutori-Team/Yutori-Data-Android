<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFEF7"
    android:orientation="vertical"
    android:weightSum="1">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btn_numselect_back"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="32dp"
            android:background="@drawable/back"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </android.support.constraint.ConstraintLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        android:weightSum="1">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.2">

            <Button
                android:id="@+id/btn_numselect_1"
                android:layout_width="match_parent"
                android:layout_height="110dp"
                android:layout_centerInParent="true"
                android:layout_marginHorizontal="40dp"
                android:backgroundTint="#FFE181"
                android:text="1"
                android:textSize="40dp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.2">

            <Button
                android:id="@+id/btn_numselect_2"
                android:layout_width="match_parent"
                android:layout_height="110dp"
                android:layout_centerInParent="true"
                android:layout_marginHorizontal="40dp"
                android:backgroundTint="#FFE181"
                android:text="2"
                android:textSize="40dp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.2">

            <Button
                android:id="@+id/btn_numselect_3"
                android:layout_width="match_parent"
                android:layout_height="110dp"
                android:layout_centerInParent="true"
                android:layout_marginHorizontal="40dp"
                android:backgroundTint="#FFE181"
                android:text="3"
                android:textSize="40dp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.2">

            <Button
                android:id="@+id/btn_numselect_4"
                android:layout_width="match_parent"
                android:layout_height="110dp"
                android:layout_centerInParent="true"
                android:layout_marginHorizontal="40dp"
                android:backgroundTint="#FFE181"

                android:text="4"
                android:textSize="40dp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.2">

            <Button
                android:id="@+id/btn_numselect_5"
                android:layout_width="match_parent"
                android:layout_height="110dp"
                android:layout_centerInParent="true"
                android:layout_marginHorizontal="40dp"
                android:backgroundTint="#FFE181"
                android:text="5"
                android:textSize="40dp" />
        </RelativeLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        android:weightSum="1">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.2">

            <Button
                android:id="@+id/btn_numselect_6"
                android:layout_width="match_parent"
                android:layout_height="110dp"
                android:layout_centerInParent="true"
                android:layout_marginHorizontal="40dp"
                android:backgroundTint="#FFE181"
                android:text="6"
                android:textSize="40dp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.2">

            <Button
                android:id="@+id/btn_numselect_7"
                android:layout_width="match_parent"
