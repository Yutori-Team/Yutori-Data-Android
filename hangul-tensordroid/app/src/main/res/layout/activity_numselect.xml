                android:layout_centerInParent="true"
                android:layout_marginHorizontal="40dp"
                android:backgroundTint="#FFE181"
                android:text="7"
                android:textSize="40dp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.2">

            <Button
                android:id="@+id/btn_numselect_8"
                android:layout_width="match_parent"
                android:layout_height="110dp"
                android:layout_centerInParent="true"
                android:layout_marginHorizontal="40dp"
                android:backgroundTint="#FFE181"
                android:text="8"
                android:textSize="40dp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.2">

            <Button
                android:id="@+id/btn_numselect_9"
                android:layout_width="match_parent"
                android:layout_height="110dp"
                android:layout_centerInParent="true"
                android:layout_marginHorizontal="40dp"
                android:backgroundTint="#FFE181"
                android:text="9"
                android:textSize="40dp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.2">

            <Button
                android:id="@+id/btn_numselect_10"
                android:layout_width="match_parent"
                android:layout_height="110dp"
                android:layout_centerInParent="true"
                android:layout_marginHorizontal="40dp"
                android:backgroundTint="#FFE181"
                android:text="10"
                android:textSize="40dp" />
        </RelativeLayout>

    </LinearLayout>


</LinearLayout>