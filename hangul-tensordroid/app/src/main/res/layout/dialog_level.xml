<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="400dp"
    android:layout_height="match_parent"
    android:layout_marginVertical="50dp"
    android:orientation="vertical"
    android:weightSum="1"
    android:padding="20dp"
    android:background="@drawable/bg_border_blue">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.1">

        <ImageButton
            android:id="@+id/btn_level_cancel"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginEnd="24dp"
            android:background="@drawable/icon_close"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </android.support.constraint.ConstraintLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.2">
        <Button
            android:id="@+id/btn_level_bottom"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="70dp"
            android:layout_marginVertical="20dp"
            android:text="하"
            android:textSize="25dp"
            android:fontFamily="@font/dx"
            android:background="@drawable/selector_level" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.2">
        <Button
            android:id="@+id/btn_level_middle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="70dp"
            android:layout_marginVertical="20dp"
            android:text="중"
            android:textSize="25dp"
            android:fontFamily="@font/dx"
            android:background="@drawable/selector_level"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.2">
        <Button
            android:id="@+id/btn_level_high"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="70dp"
            android:layout_marginVertical="20dp"
            android:text="상"
            android:textSize="25dp"
            android:fontFamily="@font/dx"
            android:background="@drawable/selector_level"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.3">
        <Button
            android:id="@+id/btn_level_ok"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="70dp"
            android:layout_marginVertical="40dp"
            android:textColor="#FFFFFF"
            android:text="확인"
            android:textSize="25dp"
            android:fontFamily="@font/dx"
            android:background="@drawable/login_redboxmdpi"/>

    </RelativeLayout>

</LinearLayout>