<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg_homemdpi">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:background="@drawable/bg_tabmdpi">

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:fontFamily="@font/dx"
            android:text="오늘의 공부"
            android:textColor="#FFFFFF"
            android:textSize="40dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/btn_home_mypage"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="32dp"
            android:background="@drawable/mypage_homemdpi"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </android.support.constraint.ConstraintLayout>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <View
            android:id="@+id/btn_home_practice"
            android:layout_width="320dp"
            android:layout_height="320dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/practice_homemdpi"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/btn_home_exam"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"></View>

        <View
            android:id="@+id/btn_home_exam"
            android:layout_width="320dp"
            android:layout_height="320dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/exam_homemdpi"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/btn_home_practice"
            app:layout_constraintTop_toTopOf="parent"></View>

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="36dp"
            android:fontFamily="@font/dx"
            android:text="연습"
            android:textColor="#000000"
            android:textSize="34dp"
            app:layout_constraintBottom_toBottomOf="@+id/btn_home_practice"
            app:layout_constraintEnd_toEndOf="@+id/btn_home_practice"
            app:layout_constraintStart_toStartOf="@+id/btn_home_practice" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="36dp"
            android:fontFamily="@font/dx"
            android:text="시험"
            android:textColor="#000000"
            android:textSize="34dp"
            app:layout_constraintBottom_toBottomOf="@+id/btn_home_exam"
            app:layout_constraintEnd_toEndOf="@+id/btn_home_exam"
            app:layout_constraintStart_toStartOf="@+id/btn_home_exam" />
    </android.support.constraint.ConstraintLayout>

</LinearLayout>